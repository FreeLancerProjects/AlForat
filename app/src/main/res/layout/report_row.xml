<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <data>
        <variable
            name="reportModel"
            type="com.creative.share.apps.alforat.models.ReportDataModel.ReportModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="40dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:gravity="center"
            date="@{reportModel.op_date}"
            android:background="@drawable/border"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="40dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:gravity="center"
            android:text="@{reportModel.op_type}"
            android:background="@drawable/border"


            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="40dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:gravity="center"
            android:text="@{reportModel.op_num}"
            android:background="@drawable/border"



            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="40dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:gravity="center"
            android:text="@{String.valueOf(reportModel.op_madeen)}"
            android:background="@drawable/border"


            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="40dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:gravity="center"
            android:text="@{reportModel.op_dayeen}"
            android:background="@drawable/border"

            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="40dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:gravity="center"
            android:text="@{String.valueOf(reportModel.balance)}"
            android:background="@drawable/border"

            />

    </LinearLayout>
</layout>